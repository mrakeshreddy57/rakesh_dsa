#include <iostream>
using namespace std;

// Function to add two integers
int add(int a, int b) {
    return a + b;
}

// Function to add three integers
int add(int a, int b, int c) {
    return a + b + c;
}

// Function to add two floating-point numbers
double add(double a, double b) {
    return a + b;
}

int main() {
    cout << "Sum of 5 and 10 (int): " << add(5, 10) << endl;
    cout << "Sum of 5, 10, and 15 (int): " << add(5, 10, 15) << endl;
    cout << "Sum of 5.5 and 2.3 (double): " << add(5.5, 2.3) << endl;

    return 0;
}
